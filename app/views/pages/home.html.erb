
<div class="landing-container">
  <div class="landing-background-img" style="background-image: url('/assets/landing.png');">
    <div class="landing-element-container">
      <img src="/assets/taste" alt="Taste" style="height: 12vh;">
      <h3 id="message-landing-home" class="my-4">
        <strong>Find Your Favorite Restaurants<br>Share with Others</strong>
      </h3>
      <div class="container">
        <div class="col-12>
          <div class="search-container-filter">
            <%= form_tag restaurants_path, method: :get, class: "restaurant-filter-form" do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control search-restaurant-filter",
              placeholder: "Search Restaurant"
              %>
              <%= button_tag type: "submit", class: "btn search-btn" do %><i class="fas fa-chevron-right"></i> <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>




