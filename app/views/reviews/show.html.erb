<div style="background-image: url('<%= cl_image_path(@review.photo.key) %>'); height: 400px; background-size: cover;">
</div>
<div class="container mt-3 px-5">
  <div class="card shadow pt-4 pl-4 pr-4 pb-3 mb-3" style="margin-top: -70px; border-radius: 10px;">
    <div class="card-body">
      <div class="row mb-1">
        <div class="col-6 pr-0">
          <%= link_to "#" do %>
            <img class="rounded-circle" style="object-fit: cover;" height="50" width="50" src="https://res.cloudinary.com/kaori-kk/image/upload/v1584023641/Deborah_ickwos.jpg" alt="avatar picture">
          <% end %>
        </div>
        <div class="col-6 text-left d-flex align-items-center">
          <% if current_user %>
            <%= link_to profile_path @review.profile do %>
              <h4> <%= @review.profile.first_name %> </h4>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="whitespace">
            <div class="ratings-container-lisa mb-1">
              <i class="fas fa-star px-1 yellow"></i>
              <i class="fas fa-star px-1 yellow"></i>
              <i class="fas fa-star px-1 yellow"></i>
              <i class="fas fa-star px-1 yellow"></i>
              <i class="far fa-star px-1 gray"></i>
            </div>
            <p class="h6"> <%= @review.description %> </p>
          </div>
        </div>
      </div>
      <div class="row d-flex justify-content-between align-items-center mt-4 px-3">
        <div>
          <i class="fas fa-heart text-danger"></i>
        </div>
        <i class="fas fa-bookmark text-primary"></i>
      </div>
    </div>
  </div>
</div>
