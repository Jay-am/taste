<div class="container">
  <div class="col-xs-12 col-md-6 offset-md-3">
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon" ><!-- style="position: absolute; top: 0; left: 0; width: 100%; z-index: 99999; -->
      <% if user_signed_in? %>
        <div class="nav-item dropdown">
          <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "Profile", profile_path(current_user.profile), class: "dropdown-item" %>
            <%= link_to "Favorite", "#", class: "dropdown-item" %>
            <button id="map-nav-btn" class="dropdown-item">Map</button>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      <% end %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= image_tag "pin.png"%>

            </li>
            <li class="nav-item">
              <i class="fas fa-search"></i>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
