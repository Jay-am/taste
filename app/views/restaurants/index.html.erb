              <h3><%= restaurant.name %></h3>
              <h3><i class="fas fa-star user-review-star"></i><%= restaurant.ratings %></h3>
            </div>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore minima consequuntur impedit dicta nostrum.</p>
            <!-- <h4 class="restaurant-address"> â‚¬ <%= restaurant.address %></h4> -->
          </div>
        <% end %>
        <div class="each-restaurant-img" style="background-image: linear-gradient(to top, transparent, white),url(<%= image_path "index_card_photo.jpeg" %>)"></div>
      </div>
      <% end %>
  </div>
</div>
