<div class="container">
  <div class="col-xs-12 col-md-6 offset-md-3">
    <h3> Results </h3>
    <div class="restaurant-grid">
      <% @restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant.id) do %>
          <div class="index-restaurant-card">
            <h4 class="restaurant-name"><%= restaurant.name %></h3>
            <p class="restaurant-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore minima consequuntur impedit dicta nostrum.</p>
            <!-- <h4 class="restaurant-address"> â‚¬ <%= restaurant.address %></h4> -->
          </div>
        <% end %>
        <div class="each-restaurant-img" style="background-image: linear-gradient(to top, transparent, white),url(<%= image_path "index_card_photo.jpeg" %>)"></div>
      <% end %>
    </div>
  </div>
</div>
