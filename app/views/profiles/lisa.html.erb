<div class="profile-show">
  <div
    class="profile-hero-picture"
    style="background-image: url('https://res.cloudinary.com/kaori-kk/image/upload/v1584052585/taste/Deborah_wzyzsv.jpg');"
  >
    <div class="profile-details">
      <div class="container">
        <div class="row">
          <div class="col-12 pt-3 center-rating-group">
            <div class="whitespace">
              <h4>Lisa Smith</h4>
              <div class="profile-description">
                <p>Food Lover! <br>Always open to connect with people around food.</p>
              </div>

              <div class="profile-action">
                <p>Reviews 30 | Followers 150 | Following 82 </p>
              </div>
            </div>
          </div>
        </div>

        <div class="follow-unfollow-btn">
          <% if current_user.following.include?(@profile.user) %>
            <%= link_to "Unfollow", unfollow_user_path(@profile.user), method: :post, class: "btn btn-outline-dark" %>
          <% else %>
            <%= link_to "Follow", follow_user_path(@profile.user), method: :post, class: "btn btn-dark" %>
          <% end %>
        </div>

        <div class="mt-5-profile">
          <ul class="nav nav-pills mb-4 justify-content-center" id="pills-tab" role="tablist">
            <li class="nav-item neu-tab-btn">
              <a
                class="nav-link"
                id="reviews-tab"
                data-toggle="pill"
                href="#reviews-container"
                role="tab"
                aria-controls="reviews-container"
                aria-selected="true"
              >
                Reviews
              </a>
            </li>

            <li class="nav-item neu-tab-btn">
              <a
                class="nav-link"
                id="bookmarks-tab"
                data-toggle="pill"
                href="#bookmarks-container"
                role="tab"
                aria-controls="bookmarks-container"
                aria-selected="false"
              >
                Bookmarks
              </a>
            </li>

            <li class="nav-item neu-tab-btn">
              <a
                class="nav-link"
                id="edit-tab"
                data-toggle="pill"
                href="#edit-container"
                role="tab"
                aria-controls="edit-container"
                aria-selected="false"
              >
                Edit
              </a>
            </li>
          </ul>

          <div class="tab-content" id="pills-tabContent">
            <!-- REVIEWS -->
            <div
              class="tab-pane fade show active"
              id="reviews-container"
              role="tabpanel"
              aria-labelledby="reviews-tab"
            >
              <div class="tab-info p-3">
                <div class="fake-container d-flex align-items-center">
                  <img src="https://res.cloudinary.com/kaori-kk/image/upload/v1584020781/taste/review6_yuaeum.png" style="width: 45%;">
                  <p> Amazing restaurant! Had a beautiful dinner night!! </p>
                </div>
              </div>
            </div>
            <!-- BOOKMARKS -->
            <div class="tab-pane fade" id="bookmarks-container" role="tabpanel" aria-labelledby="bookmarks-tab">
              <div class="tab-info p-3">
                <% @bookmarks.each do |bookmark| %>
                  <div class="row">
                    <div class="col-12 d-flex justify-content-center align-items-center flex-column">
                      <div class="bookmark-restaurant-card d-flex align-items-center mb-1">
                        <%= cl_image_tag bookmark.bookmarkable.photo.key %>

                        <%= link_to restaurant_path bookmark.bookmarkable do %>
                          <%= bookmark.bookmarkable.name %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- EDIT -->
            <div class="tab-pane fade" id="edit-container" role="tabpanel" aria-labelledby="edit-tab">
              <div class="tab-info p-3">
                <%= simple_form_for @profile do |f| %>
                  <%= f.input :gender, collection: [ [ "Male", 'Male' ], ['Female', 'Female'], ['Other', 'Other'] ], as: :radio_buttons, class: "gender-form" %>
                  <%= f.input :age, collection: 15..99 %>
                  <%= f.input :first_name %>
                  <%= f.input :last_name %>
                  <%= f.input :address %>
                  <%= f.input :photo, as: :file, label: "avatar" %>
                  <%= f.submit "Update", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

